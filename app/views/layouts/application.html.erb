<!DOCTYPE html>
<html>
  <head >
    <title>BLOG</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="font-family:cursive">
	 <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

  	<section class="hero is-danger">
	  <!-- Hero head: will stick at the top -->
	  <div class="hero-head" >
		
	    <nav class="navbar">
	      <div class="container">
	        <div class="navbar-brand">
	         <b> <%= link_to 'Inicio', root_path, class: "navbar-item" %></b>
	          <span class="navbar-burger burger" data-target="navbarMenuHeroA">
	            <span></span>
	            <span></span>
	            <span></span>
	          </span>
	        </div>
	        <div id="navbarMenuHeroA" class="navbar-menu">
	          <div class="navbar-end">

	            <%= link_to "Crear nuevo post", new_post_path, class:"navbar-item" %>
							<p style="margin-top: 2.5%">
                  <%  if user_signed_in? %>
                    Conectado como:  <strong style="margin-top: 2%" ><%= current_user.email %></strong>. </p>       
                  <%= link_to "cerrar sesion", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
                <% else %>
                 <%= link_to "Registrarse", new_user_registration_path, :class => 'navbar-link'  %> |
                     <%= link_to "Iniciar sesion", new_user_session_path, :class => 'navbar-link'  %>
                  <% end %>

	          </div>
	        </div>
	      </div>
	    </nav>
	  </div>

	  <!-- Hero content: will be in the middle -->
	  <div class="hero-body">
	    <div class="container has-text-centered">
	      <h1 class="title">
	        <%= yield :page_title %>
	      </h1>
	    </div>
	  </div>
	</section>
    <%= yield %>
  </body>
</html>
